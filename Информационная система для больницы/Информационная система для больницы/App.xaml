<Application x:Class="Информационная_система_для_больницы.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Информационная_система_для_больницы"
             StartupUri="AuthWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="theme" Source="Themes/Blue.xaml"/>
                <ResourceDictionary Source="Styles/menuButtonsStyle.xaml"/>
                <ResourceDictionary Source="Styles/windowMenuButtonsStyle.xaml"/>
                <ResourceDictionary Source="Styles/buttonsStyle.xaml"/>
                <ResourceDictionary Source="Styles/comboboxesStyle.xaml"/>
                <ResourceDictionary Source="Styles/textboxesStyle.xaml"/>
                <ResourceDictionary Source="Styles/datagridsStyle.xaml"/>
                <ResourceDictionary Source="Styles/passwordBoxesStyle.xaml"/>
                <ResourceDictionary Source="Styles/checkboxStyle.xaml"/>
                <ResourceDictionary Source="Styles/listboxesStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
