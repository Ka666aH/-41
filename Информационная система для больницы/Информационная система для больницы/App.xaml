<Application x:Class="Информационная_система_для_больницы.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Информационная_система_для_больницы"
             xmlns:view ="clr-namespace:Информационная_система_для_больницы.MVVM.Views"
             xmlns:viewModel ="clr-namespace:Информационная_система_для_больницы.MVVM.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/greyBlue.xaml"/>
                <ResourceDictionary Source="Styles/menuButtonsStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:registrarMenuButtonsViewModel}">
                <view:registrarMenuButtonsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:doctorMenuButtonsViewModel}">
                <view:doctorMenuButtonsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:nurseMenuButtonsViewModel}">
                <view:nurseMenuButtonsView/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
